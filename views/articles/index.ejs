<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>Blog App</title>
</head>

<body>
    <div class="container" >
        <br>
        <h1 class="mb-4">Blog Entries</h1>
        <a type="button" class="btn btn-primary" href="articles/new" >New Article</a>

        <% articles.forEach(article=>{ %>
            <div class="card mt-4" style="width: 95%; ">
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %> </h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= article.date.toLocaleDateString() %></h6>
                  <p class="card-text"><%= article.desc %></p>
                  <a href="articles/<%= article.id %> " class="btn btn-primary" style="background-color: #2eb8b3;">Show More</a>
                  <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-secondary">Delete</button>
                </form>
                <a href="articles/edit/<%= article.id %> " class="btn btn-success" style="background-color: #00b386">Edit</a>
                </div>
              </div>
            <% }) %>
    </div>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
